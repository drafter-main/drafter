<div class="register_form">
  <div class="col-xs-12 register_head">
    Реєстрація
  </div>
  <%= form_for @user do |f| %>
    <div class="field">
      <%= f.label :email, 'Емейл' %>
      <%= f.text_field :email, class: "form-control"  %>
    </div>
    <div class="field">
      <%= f.label :password, 'Пароль' %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'Ще разок пароль' %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

    </div>
      <%= recaptcha_tags %>
    <div class="button_div">
      <%= button_tag 'Зареєструватись', class: "btn sign_up_button"%>
    </div>
  <% end %>
</div>
