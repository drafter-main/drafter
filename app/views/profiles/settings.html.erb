<div class="profile">
  <%= render 'profile_head'%>
  <div class="settings">
    <ul class="nav nav-pills nav-stacked col-xs-3" id="left_nav">
      <li class="active"><a href="#profile" data-toggle="tab">Профіль</a></li>
      <li><a href="#password" data-toggle="tab">Змінити пароль</a></li>
      <li><a href="#social" data-toggle="tab">Соціальні мережі</a></li>
    </ul>
    <div class="tab-content">
        <div class="settings_profile tab-pane active col-xs-9" id="profile">
          <%= form_tag(change_settings_profiles_path, :class => 'form-horizontal') do %>
              <div class="form-group">
                <label class="control-label col-xs-3" for="nick">Нік:</label>
                <div class="col-xs-8">
                  <input type="text" class="form-control" id="nick" placeholder="Введіть нік" name="nick" value="<%= @user.nick%>">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-xs-3" for="email">Електронна пошта:</label>
                <div class="col-xs-8">
                  <input type="email" class="form-control" id="email" placeholder="Введіть електронну пошту"
                         name="email" value=" <%= @user.email%> ">
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                  <button type="submit" class="btn btn-primary">Змінити</button>
                </div>
              </div>
          <% end %>
        </div>

        <div class="settings_reset tab-pane col-xs-9" id="password">
          <%= form_tag(change_password_profiles_path, :class => 'form-horizontal') do %>
              <% if @user.crypted_password%>
                  <div class="form-group">
                    <label class="control-label col-xs-3" for="old-pass">Старий пароль:</label>
                    <div class="col-xs-8">
                      <input type="password" class="form-control" id="old-pass" placeholder="Введіть старий пароль" name="old-pass">
                    </div>
                  </div>
              <% else %>
                  <div class="pass_warn">введіть пароль(у вас його тіпа нема)</div>
              <% end %>
              <div class="form-group">
                <label class="control-label col-xs-3" for="new-pass">Новий пароль:</label>
                <div class="col-xs-8">
                  <input type="password" class="form-control" id="new-pass" placeholder="Введіть новий пароль" name="new-pass">
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-xs-3" for="new-pass-confirm">Новий пароль:</label>
                <div class="col-xs-8">
                  <input type="password" class="form-control" id="new-pass-confirm" placeholder="Введіть новий пароль" name="new-pass-confirm">
                </div>
              </div>
              <div class="form-group">
                <div class="col-xs-offset-3 col-xs-9">
                  <button type="submit" class="btn btn-primary">Змінити</button>
                </div>
              </div>
          <% end %>
        </div>

        <div class="settings_social tab-pane col-xs-9" id="social">
          <div class="warning_soc_networks">
            тіпа прогрес втратиться на старому аккаунті і тд...
          </div>
          <div class="connect_fb">
            <% if @fb.empty? %>
                <%= link_to "Під'єднати Facebook", auth_at_provider_path(:provider => :facebook), class: "btn btn-primary" %>
            <% else %>
                <%= link_to "Від'єднати Facebook", social_net_ctrl_profiles_path( remove: 'fb') %>
            <% end %>
          </div>
          <div class="connect_vk">
            <% if @vk.empty? %>
                <%= link_to "Під'єднати VK", auth_at_provider_path(:provider => :vk), class: "btn btn-primary" %> |
            <% else %>
                <%= link_to "Від'єднати VK", social_net_ctrl_profiles_path( remove: 'vk') %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>