<div id="edit-title-modal" class="modal fade builder-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Вкажіть заголовок і опис</h4>
            </div>
            <div class="modal-body">
              <form>
                <div class="form-group">
                  <label for="title">Заголовок</label>
                  <textarea class="form-control" id="title" placeholder="Вкажіть заголовок"></textarea>
                </div>
                 <div class="form-group">
                    <label for="description">Опис</label>
                    <textarea class="form-control" id="description" placeholder="Вкажіть опис(не обов'язково)"></textarea>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" id="edit-title-modal-submit" class="btn btn-primary">Зберегти зміни</button>
            </div>
        </div>
    </div>
</div>