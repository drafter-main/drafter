
<%= form_for @post, html: { class: 'new_post col-md-offset-1 col-md-4'} do |f| %>
  <div class="form-group ">
    <%= f.label :title %>
    <%= f.text_area :title, class: 'form-control', placeholder: 'Enter title' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Enter description' %>
  </div>
  <%= f.label :tags %>
  <%= f.text_field :tag_list %>
  <%= f.submit :Submit, class: 'btn btn-default' %>
<% end %>
