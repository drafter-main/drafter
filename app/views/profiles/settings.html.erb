<div class="profile">
  <%= render 'profile_head'%>
  <div class="change_password">
    <%= form_tag(change_settings_profiles_path, :class => 'form-horizontal') do %>
      <div class="form-group">
        <label class="control-label col-xs-3" for="old-pass">Старий пароль:</label>
        <div class="col-xs-8">
          <input type="password" class="form-control" id="old-pass" placeholder="Введіть старий пароль" name="old-pass">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="new-pass">Новий пароль:</label>
        <div class="col-xs-8">
          <input type="password" class="form-control" id="new-pass" placeholder="Введіть новий пароль" name="new-pass">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="new-pass-confirm">Новий пароль:</label>
        <div class="col-xs-8">
          <input type="password" class="form-control" id="new-pass-confirm" placeholder="Введіть новий пароль" name="new-pass-confirm">
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-offset-3 col-xs-9">
          <button type="submit" class="btn btn-primary">Змінити</button>
        </div>
      </div>
    <% end %>
  </div>
</div>